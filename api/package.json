{
  "name": "albero-api",
  "version": "1.0.0",
  "description": "Albero Family Tree API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "deploy": "bash ../infrastructure/deploy.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "migrate:data": "ts-node src/scripts/migrate-data.ts",
    "migrate:preone": "ts-node src/scripts/migrate-preone.ts",
    "migrate:albaro": "ts-node src/scripts/migrate-albaro.ts",
    "migrate:users": "ts-node src/scripts/migrate-users.ts",
    "migrate:media": "ts-node src/scripts/migrate-media.ts",
    "migrate:photo-tags": "ts-node src/scripts/migrate-photo-tags.ts",
    "set:avatars": "ts-node src/scripts/set-avatars.ts",
    "migrate:gallery": "ts-node src/scripts/migrate-gallery.ts",
    "assign:person-photos-category": "ts-node src/scripts/assign-person-photos-category.ts",
    "find:duplicates": "ts-node src/scripts/find-duplicates.ts",
    "fix:parent-links": "ts-node src/scripts/fix-parent-links.ts",
    "fix:albaro-links": "ts-node src/scripts/fix-albaro-links.ts",
    "fix:albaro-links-fast": "ts-node src/scripts/fix-albaro-links-fast.ts",
    "fix:marriages": "ts-node src/scripts/fix-marriages.ts"
  },
  "keywords": [
    "family-tree",
    "genealogy",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "prisma": "^5.22.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
